#this is my version 2 code which contains both my moisture sensor and humidity and humidifier 
#include <SPI.h>
#include <Wire.h>
#include <Adafruit_GFX.h>
#include <Adafruit_SSD1306.h>
#include <dht11.h>

#define OLED_RESET 4
#define sensor A0
#define DHT11PIN 9

Adafruit_SSD1306 display(OLED_RESET);
dht11 DHT11;

void setup()
{
  Serial.begin(9600);

  display.begin(SSD1306_SWITCHCAPVCC, 0x3C); // change the address(0x3C) as per need
  display.clearDisplay();
}

void loop()
{
  int value = analogRead(sensor);
  int percent = map(value, 1024, 0, 0, 100);

  int chk = DHT11.read(DHT11PIN);

  Serial.println();

  Serial.print("Humidity (%): ");
  Serial.println((float)DHT11.humidity, 2);

  Serial.print("Temperature  (C): ");
  Serial.println((float)DHT11.temperature, 2);

  display.setTextSize(2);
  display.setTextColor(WHITE);
  display.setCursor(0, 0);
  display.println("MOISTURE");
  display.print(percent);
  display.print("%");
  display.setTextSize(1);
  display.setCursor(0, 25);
  display.print("Humidity: ");
  display.print((float)DHT11.humidity, 2);
  display.print("%");
  display.setCursor(0, 35);
  display.print("Temperature: ");
  display.print((float)DHT11.temperature, 2);
  display.print(" C");
  display.display();
  display.clearDisplay();

  delay(2000);
}
